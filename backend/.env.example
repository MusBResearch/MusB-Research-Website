# ============================================================
# BACKEND ENVIRONMENT VARIABLES
# Copy this file to .env and fill in your production values
# ============================================================

# MongoDB Connection
MONGO_URI=mongodb://localhost:27017/musb_research

# Django Core
DJANGO_SECRET_KEY=change-me-to-a-random-50-char-string
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# CORS (comma-separated frontend URLs)
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# SSL Redirect (set to False if behind a reverse proxy that handles SSL)
SECURE_SSL_REDIRECT=True

# Email (for contact form notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@yourdomain.com
